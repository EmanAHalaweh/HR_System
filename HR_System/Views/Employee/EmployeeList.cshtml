@model List<Employee>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section body{
    <form method="post">
        <div class="row" style="margin-top:10px">
            <div class="col-xs-1">
                <span>First Name</span>
            </div>
            <div class="col-xs-6">
                <input type="text" class="form-control" name="txtName" />
            </div>

            <div class="col-xs-2">
                <input type="submit" value="search" class="btn btn-primary" asp-action="Search">

            </div>
        </div>

        <div class="row" style="margin-top:10px">
            <div class="col-xs-12">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone</th>
                            <th>Salary</th>
                            <th>Options</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee item in Model)
                        {
                        <tr>
                            <td><img src="~/StaticFile/@item.path" style="width:100px"></td>
                            <td>@item.Fname</td>
                            <td>@item.Lname</td>
                            <td>@item.Phone</td>
                            <td>@item.salary</td>
                            <td>
                                <a class="btn btn-danger" asp-action="Edit" asp-route-Id="@item.Id"> Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id"> Delete</a>

                            </td>




                        </tr>
                        }
                    </tbody>




                </table>
            </div>

        </div>
    </form>
}
