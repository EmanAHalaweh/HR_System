@model List<Department>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section body{
    <form method="post">
        <div class="row" style="margin-top:10px">
            <div class="col-xs-1">
                <span>Name</span>
            </div>
            <div class="col-xs-6">
                <input type="text" class="form-control" name="txtName" />
            </div>

            <div class="col-xs-2">
                <input type="submit" value="search" class="btn btn-primary" asp-action="Search">

            </div>
        </div>

        <div class="row" style="margin-top:10px" >
            <div class="col-xs-12">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Department item in Model)
                        {
                        <tr>
                            <td>@item.name</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-danger" asp-action="Edit" asp-route-Id="@item.Id"> Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id"> Delete</a>
                                <a class="btn btn-danger" asp-controller="Employee" asp-action="deptemp" asp-route-dept_id="@item.Id"> Employees</a>

                            </td>
                        </tr>
                        }
                    </tbody>




                </table>
            </div>

        </div>
    </form>
}